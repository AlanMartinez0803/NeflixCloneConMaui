<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:modelos="clr-namespace:NetFlixClone.Models"
             xmlns:controlesxd="clr-namespace:NetFlixClone.Controlls"
             x:Class="NetFlixClone.Controlls.FilaPeliculas"
             x:Name="this">
    <VerticalStackLayout BackgroundColor="Black"
                         BindingContext="{x:Reference this}">
        <Label Text="{Binding Heading}"
               FontAttributes="Bold"
               FontSize="16"
               HorizontalOptions="Start"
               Margin="10,0,0,10"/>
        <CollectionView ItemsSource="{Binding Movies}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="modelos:ModeloMedia">
                    <Border StrokeShape="RoundRectangle 5"
                            Stroke="Black" StrokeThickness="1">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type controlesxd:FilaPeliculas}}, Path=MediaDetailsCommand}" 
                                                  CommandParameter="{Binding .}"/>
                            

                        </Border.GestureRecognizers>
                        <Grid>
                            <Image Aspect="AspectFill" HeightRequest="150" WidthRequest="120"
                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type controlesxd:FilaPeliculas}}, Path=IsNotLarge}">
                                <Image.Source>
                                    <UriImageSource Uri="{Binding ThumbnailSmall}"/>
                                </Image.Source>
                            </Image>
                            <Image Aspect="AspectFill" HeightRequest="200" WidthRequest="150"
                                 IsVisible="{Binding Source={RelativeSource AncestorType={x:Type controlesxd:FilaPeliculas}}, Path=IsLarge}">
                                <Image.Source>
                                <UriImageSource Uri="{Binding ThumbnailSmall}"/>
                                </Image.Source>
                            </Image>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        
    </VerticalStackLayout>
</ContentView>
