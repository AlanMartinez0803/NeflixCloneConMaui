<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controlesxd="clr-namespace:NetFlixClone.Controlls"
             x:Class="NetFlixClone.Controlls.InfoPelicula"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="this"
             Padding="0"
             Margin="0">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="Ellipse" x:Key="iconBg">
                <Setter Property="HeightRequest" Value="25"/>
                <Setter Property="WidthRequest" Value="25" />
                <Setter Property="Fill" Value="#3c3c3c"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style TargetType="Image" x:Key="imagenxd">
                <Setter Property="HeightRequest" Value="20"/>
                <Setter Property="WidthRequest" Value="20"/>
                <Setter Property="Aspect" Value="AspectFill"/>
            </Style>
            <Style TargetType="Label" x:Key="iconLabelxp">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="11" />
                <Setter Property="TextColor" Value="#9d9d9d"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    <Border BindingContext="{x:Reference this}"
            StrokeShape="RoundRectangle 10,10,0,0"
            StrokeThickness="0"
            BackgroundColor="#2b2b2b"
            Margin="0"
            Padding="0">
        <VerticalStackLayout>
            <Grid RowDefinitions="Auto,Auto,Auto"
                  ColumnDefinitions="120,*"
                  Padding="10"
                  ColumnSpacing="10">
                <Border Grid.Column="0" Grid.RowSpan="3"
                        HeightRequest="150" WidthRequest="120"
                        StrokeShape="RoundRectangle 5"
                        Stroke="#2b2b2b"
                        StrokeThickness="0"
                        Padding="0">
                    <Image Aspect="AspectFill" HeightRequest="150" WidthRequest="120">
                        <Image.Source>
                            <UriImageSource Uri="{Binding Media.Thumbnail}"/>
                        </Image.Source>
                    </Image>
                    
                </Border>
                <Grid Grid.Row="0" Grid.Column="1"
      ColumnDefinitions="*, Auto">
                    <Label Grid.Column="0" Text="{Binding Media.DisplayTitlex, FallbackValue='Movie Title'}"
           FontSize="17" LineBreakMode="CharacterWrap"/>
                    <Button Grid.Column="1" 
            Text="X"
            FontSize="17"
            TextColor="White"
            BackgroundColor="#525252"
            VerticalOptions="Start"              
            CornerRadius="25"
            HeightRequest="25"
            WidthRequest="25" 
            Padding="0"
            Margin="5"
            Command="{Binding CloseCommand}"
            Clicked="Button_Clicked"/>
                </Grid>
                <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="{Binding Media.ReleaseDate}"
                       FontSize="10"
                       TextColor="#9d9d9d"
                       />
                <Label Grid.Row="2"
                       Grid.Column="1"
                       Text="{Binding Media.Overview}"
                       FontSize="11"
                       MaxLines="4"/>
            </Grid>
            <Grid ColumnDefinitions="*,*,*,*" Margin="0,20,0,5">
                <Grid Grid.Column="0" RowDefinitions="Auto,Auto">
                    <Ellipse Style="{StaticResource iconBg}"/>
                    <Image  Source="play.png" 
                            Style="{StaticResource imagenxd}" >
                        <Image.Behaviors >
                            <toolkit:IconTintColorBehavior TintColor="White"/> <!--Colorear una imagen xd-->
                        </Image.Behaviors>
                    </Image>
                    <Label Grid.Row="1" Text="Jugar"
                           Style="{StaticResource iconLabelxp}"/>
                </Grid>
                <Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                    <Ellipse Style="{StaticResource iconBg}"/>
                    <Image  Source="download.png" 
             Style="{StaticResource imagenxd}" >
                        <Image.Behaviors >
                            <toolkit:IconTintColorBehavior TintColor="White"/>
                            <!--Colorear una imagen xd-->
                        </Image.Behaviors>
                    </Image>
                    <Label Grid.Row="1" Text="Descagar"
            Style="{StaticResource iconLabelxp}"/>
                </Grid>
                <Grid Grid.Column="2" RowDefinitions="Auto,Auto">
                    <Ellipse Style="{StaticResource iconBg}"/>
                    <Image  Source="plus.png" 
             Style="{StaticResource imagenxd}" >
                        <Image.Behaviors >
                            <toolkit:IconTintColorBehavior TintColor="White"/>
                            <!--Colorear una imagen xd-->
                        </Image.Behaviors>
                    </Image>
                    <Label Grid.Row="1" Text="Mi lista"
            Style="{StaticResource iconLabelxp}"/>
                </Grid>
                <Grid Grid.Column="3" RowDefinitions="Auto,Auto">
                    <Ellipse Style="{StaticResource iconBg}"/>
                    <Image  Source="share.png" 
             Style="{StaticResource imagenxd}" >
                        <Image.Behaviors >
                            <toolkit:IconTintColorBehavior TintColor="White"/>
                            <!--Colorea una imagen xd-->
                        </Image.Behaviors>
                    </Image>
                    <Label Grid.Row="1" Text="Compartir"
            Style="{StaticResource iconLabelxp}"/>
                </Grid>
            </Grid>
            <BoxView BackgroundColor="#9d9d9d" HeightRequest="2" Color="#9d9d9d"  Margin="5,0"/>
            <Grid ColumnDefinitions="Auto, *,Auto"
                  Padding="15" ColumnSpacing="5">
                <Grid Grid.Column="0" HorizontalOptions="Center">
                    <Ellipse  Stroke="White" HeightRequest="22"
                     WidthRequest="22" StrokeThickness="2"/>
                    <Label Text="i" HorizontalOptions="Center"
                     VerticalOptions="Center" FontAttributes="Bold"/>
                </Grid>
                <Label Grid.Column="1" Text="Detalles &amp; Mas"/>
                <Label Grid.Column="2" Text=">"/>
            </Grid>
        </VerticalStackLayout>

        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="GestorTap_Tapped"
        </Border.GestureRecognizers>
    </Border>
</ContentView>
