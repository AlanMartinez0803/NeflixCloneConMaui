<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetFlixClone.Views.CategoriasPage"
             Shell.PresentationMode="ModalAnimated"
             xmlns:vm="clr-namespace:NetFlixClone.ViewModels"
             BackgroundColor="Transparent"
             x:DataType="vm:CategoriasViewModel">
    <Grid>
        <BoxView BackgroundColor="Black" Opacity="0.9"/>
        <CollectionView ItemsSource="{Binding Categorias}"
                        Margin="0,30,0,90">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Label Text="{Binding .}" HorizontalOptions="Center" FontSize="18"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button Text="X" Margin="10" WidthRequest="50" HeightRequest="50" 
                BackgroundColor="White" TextColor="Black" FontSize="25"
                FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="End"
                Padding="0"
                CornerRadius="40"
                Clicked="Cerrar_Categoria">
            <Button.Shadow>
                <Shadow Brush="Red" Offset="-10, 0"
                        Radius="40" Opacity="1"/>
            </Button.Shadow>
            
            
        </Button>
    
    </Grid>
</ContentPage>